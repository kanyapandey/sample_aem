<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Heading"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="http://www.adobe.com/go/aem6_1_docs_component_en#Title - HTL">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <aligntype
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/foundation/form/select"
                        fieldLabel="Align Type"
                        name="./aligntype">
                        <items jcr:primaryType="nt:unstructured">
                            <option1
                                jcr:primaryType="nt:unstructured"
                                text="Center"
                                value="center"/>
                            <option2
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="left"/>
                            <option3
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="right"/>
                        </items>
                    </aligntype>
                    <title1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Leave empty to use the page title."
                        fieldLabel="Title text"
                        name="./title"/>
                    <background
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/foundation/form/select"
                        fieldLabel="Background Color"
                        name="./background">
                        <items jcr:primaryType="nt:unstructured">
                            <option1
                                jcr:primaryType="nt:unstructured"
                                text="Gray"
                                value="#e9ecef"/>
                            <option2
                                jcr:primaryType="nt:unstructured"
                                text="Black"
                                value="#000"/>
                        </items>
                    </background>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
